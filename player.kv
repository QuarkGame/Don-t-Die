#:import entities entities

<Player>:
    size_hint: None, None
    size: 35, 35

    canvas:
        PushMatrix
        Rotate:
            angle: self._angle
            origin: self.center
        Color:
            rgba: .6, .6, .6, 1
        Rectangle:
            pos: self.pos
            size: self.size
        PopMatrix

<Ground>

<ItemBox>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
    background_normal: self.image

<InventoryBox>:
    canvas.before:
        Color:
            rgba: .5, .5, .5, .7
        Rectangle:
            pos: self.pos
            size: self.width + 2.5, self.height
    size_hint_y: None
    height: 60
    padding: 5
    spacing: 2.5