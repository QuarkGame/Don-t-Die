#:import entities entities

<Player>:
    size_hint: None, None
    size: 35, 35

    canvas:
        PushMatrix
        Rotate:
            angle: self._angle
            origin: self.center
        Color:
            rgba: .6, .6, .6, 1
        Rectangle:
            pos: self.pos
            size: self.size
        PopMatrix

<Ground>:
    canvas:
        # Color:
        #     rgba: .35, .2, 0, 1
        Rectangle:
            pos: self.x - 1000, self.y - 1000
            size: 2000, 2000
    Image:
        source: 'assets/sprites/terrain/mud_terrain.png'
        allow_stretch: True
        size_hint: None, None
        size: 2000, 2000
        # TODO: Tile image

<ItemBox>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
    background_normal: self.image

<InventoryBox>:
    canvas.before:
        Color:
            rgba: .5, .5, .5, .7
        Rectangle:
            pos: self.pos
            size: self.width + 2.5, self.height
    size_hint_y: None
    height: 60
    padding: 5
    spacing: 2.5