<Bar@BoxLayout>:
    max: 1
    value: 1
    size_hint: None, None
    size: 200, 35

    canvas.before:

        Color:
            rgba: 0, 0, 1, 1
        Rectangle:
            pos: root.pos
            size: root.size

        Color:
            rgba: 1, 0, 0, 1
        Rectangle:
            pos: root.pos
            size: root.width * root.value / root.max, root.height

        Color:
            rgba: .5, .5, .5, 1
        Line:
            rectangle: root.x - 1, root.y - 1, root.width - 1, root.height - 1
            width: 3


RelativeLayout:

    Ground:
        Player:
            id: player
            pos: root.center
        Bush:
            left: 0
            center_y: root.center_y
        FirstAidKit:
            right: root.width
            center_y: root.center_y

    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'
        BoxLayout:
            size_hint: None, None
            size: self.minimum_size
            orientation: 'vertical'
            padding: 10
            spacing: 10

            Bar:
                max: 100
                value: player._health
            Bar:
                max: 300
                value: player._hunger

    AnchorLayout:
        anchor_x: 'right'
        anchor_y: 'top'
        padding: 10
        Button:
            text: 'Menu'
            size_hint: None, None
            size: 75, 35
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'bottom'
        padding: 10
        BoxLayout:
            spacing: 7.5
            size_hint: None, None
            size: 400, 47.5
            Button:
                text: 'Backpack'
                size_hint_x: None
                width: 75
            Button:
                text: 'Craft'
                size_hint_x: None
                width: 75
            BoxLayout:
                canvas.before:
                    Color:
                        rgba: .5, .5, .5, .7
                    Rectangle:
                        pos: self.pos
                        size: self.width + 2.5, self.height
                size_hint_y: None
                height: 60
                padding: 5
                spacing: 2.5

                ToggleButton:
                    group: "inventory"
                ToggleButton:
                    group: "inventory"
                ToggleButton:
                    group: "inventory"
                ToggleButton:
                    group: "inventory"
